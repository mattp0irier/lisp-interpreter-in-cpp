(print "EXPONENTIATION TEST")

(define pow (num power) (begin
    (set i power)
    (set a num)
    (if (= i 0)
        (set num 1)
        (begin (while (> i 1) (begin
            (set num (* num a))
            (set i (- i 1))
        )
        )
        num
        )        
    )
)
)

(pow 3 2)
(pow 3 3)
(pow 3 4)
(pow 8 4)
(pow 2.5 2)
(pow 35 0)
(pow 0 0)
